{% from '@SyliusAdmin/Macro/translationForm.html.twig' import translationFormWithSlug %}

<div class="ui active tab" data-tab="details">
    <h3 class="ui top attached header">{{ 'sylius.ui.details'|trans }}</h3>

    <div class="ui attached segment">
        {{ form_errors(form) }}

        <div class="ui two column stackable grid">
            <div class="column">
                <div class="ui segment">
                    {{ form_row(form.code) }}
                    {{ form_row(form.enabled) }}
                    {% if product.simple %}
                        {{ form_row(form.variant.shippingRequired) }}
                    {% else %}
                        {{ form_row(form.options) }}
                        {{ form_row(form.variantSelectionMethod) }}
                    {% endif %}

                    {# Nothing to see here. #}
                    <div class="ui hidden element">
                        {% if product.simple %}
                            {{ form_row(form.variant.translations) }}
                        {% endif %}
                        {{ form_row(form.variantSelectionMethod) }}
                    </div>
                </div>
            </div>
            <div class="column">
                {{ form_row(form.channels) }}

                {% if product.simple %}
                    <h4 class="ui dividing header">{{ 'sylius.ui.pricing'|trans }}</h4>
                    {{ form_row(form.variant.channelPricings, {'label': false}) }}
                {% endif %}
            </div>
        </div>
        <div class="ui hidden divider"></div>
        {{ translationFormWithSlug(form.translations, '@SyliusAdmin/Product/_slugField.html.twig', product) }}

        {% if product.simple %}
        <div class="ui hidden divider"></div>
        <div class="ui two column stackable grid">
            <div class="column">
                <h4 class="ui top attached header">{{ 'sylius.ui.shipping'|trans }}</h4>
                <div class="ui attached segment">
                    {{ form_row(form.variant.shippingCategory) }}
                    {{ form_row(form.variant.width) }}
                    {{ form_row(form.variant.height) }}
                    {{ form_row(form.variant.depth) }}
                    {{ form_row(form.variant.weight) }}
                </div>
            </div>
            <div class="column">
                <h4 class="ui top attached header">{{ 'sylius.ui.taxes'|trans }}</h4>
                <div class="ui attached segment">
                    {{ form_row(form.variant.taxCategory) }}
                </div>
            </div>
        </div>
        {% endif %}

        {{ sylius_template_event(['sylius.admin.product.' ~ action ~ '.tab_details', 'sylius.admin.product.tab_details'], {'form': form}) }}
    </div>

    <div class="ui hidden divider"></div>

    <div class="ui segment">
        {{ form_row(form.referenceableContent) }}

        <div class="ui hidden divider"></div>

        <div class="ui message info">
            <div class="header">{{ 'dedi_sylius_seo_plugin.ui.product_info_title'|trans }}</div>
            <p>{{ 'dedi_sylius_seo_plugin.ui.product_info_description'|trans }}</p>
            <a href="https://developers.google.com/search/docs/data-types/product" target="_blank">{{ 'dedi_sylius_seo_plugin.ui.product_info_link'|trans }}</a>
        </div>

        <div class="ui hidden divider"></div>

        <div class="ui two column stackable grid">
            <div class="column">
                <h4 class="ui top attached header">{{ 'dedi_sylius_seo_plugin.ui.brand_title'|trans }}</h4>
                <div class="ui attached segment">
                    {{ form_row(form.brand) }}
                </div>
            </div>
            <div class="column">
                <h4 class="ui top attached header">{{ 'dedi_sylius_seo_plugin.ui.sku_title'|trans }}</h4>
                <div class="ui attached segment">
                    {{ form_row(form.sku) }}
                </div>
            </div>
        </div>

        <div class="ui hidden divider"></div>

        <h4 class="ui top attached header">
            {{ 'dedi_sylius_seo_plugin.ui.global_identifiers_title'|trans }}
            <small><a href="https://schema.org/Product" target="_blank">{{ 'dedi_sylius_seo_plugin.ui.global_identifiers_link'|trans }}</a></small>
        </h4>
        <div class="ui attached segment">

            <div class="ui two column stackable grid">
                <div class="column">
                    {{ form_row(form.gtin8) }}
                    {{ form_row(form.gtin13) }}
                    {{ form_row(form.gtin14) }}
                </div>
                <div class="column">
                    {{ form_row(form.mpn) }}
                    {{ form_row(form.isbn) }}
                </div>
            </div>
        </div>
    </div>
</div>
